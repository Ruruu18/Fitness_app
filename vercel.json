{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "DB_HOST": "replace-with-your-db-host",
    "DB_USER": "replace-with-your-db-user",
    "DB_PASSWORD": "replace-with-your-db-password",
    "DB_NAME": "fitness_app",
    "DB_PORT": "3306"
  }
} 